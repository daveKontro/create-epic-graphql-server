{
  "ts-node": {
    "transpileOnly": true,
    "files": true,
    "compilerOptions": {}
  },
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": "src",
    "preserveConstEnums": true,
    "target": "es6",
    "pretty": true,
    "sourceMap": true,
    "strict": true,
    "outDir": "./build",
    "types": [
      "@types/chai",
      "@types/chalk",
      "@types/dotenv-flow",
      "@types/express",
      "@types/mocha",
      "@types/node",
      "@types/sinon",
      "@types/supertest",
      "@types/express-session"
    ],
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "./.env*",
    "node_modules",
    "bin",
    "build",
    ".vscode",
    "*.json5",
    "**/*.specs.ts",
    "**/*.test.ts"
  ]
}